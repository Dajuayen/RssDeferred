<?xml version='1.0' encoding='utf-8'?>
<widget id="com.prueba.basica.deferred" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BackgroundServicePlugin">
        <param name="android-package" value="com.red_folder.phonegap.plugin.backgroundservice.BackgroundServicePlugin" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <splash density="port-hdpi" src="res/drawable-hdpi/lector.png" />
    <splash density="land-hdpi" src="res/drawable-hdpi/lector.png" />
    <splash density="port-mdpi" src="res/drawable-mdpi/lector.png" />
    <splash density="land-mdpi" src="res/drawable-mdpi/lector.png" />
    <splash density="port-xhdpi" src="res/drawable-xhdpi/lector.png" />
    <splash density="land-xhdpi" src="res/drawable-xhdpi/lector.png" />
    <splash density="port-xxhdpi" src="res/drawable-xxhdpi/lector.png" />
    <splash density="land-xxhdpi" src="res/drawable-xxhdpi/lector.png" />
    <splash density="port-xxxhdpi" src="res/drawable-xxxhdpi/lector.png" />
    <splash density="land-xxxhdpi" src="res/drawable-xxxhdpi/lector.png" />
    <name>RssDeferred</name>
    <description>
        A Apache Cordova application: Reader RSS.
        Pruebas de Deferred en los m√©todos de guardado de los RSS y
        mostrar la lista.        
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        David Juaneda Ayensa
    </author>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <content src="principal.html" />
    <icon src="res/drawable-hdpi/lector.png" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="FadeSplashScreenDuration" value="3000" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashMaintainAspectRatio" value="false" />
</widget>
